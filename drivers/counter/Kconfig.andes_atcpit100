config COUNTER_ANDES_ATCPIT100
	bool "Andes ATCPIT100 PIT driver"
	default y
	depends on DT_HAS_ANDESTECH_ATCPIT100_ENABLED
	help
	  Enable driver for the Andes ATCPIT100 PIT controller.
