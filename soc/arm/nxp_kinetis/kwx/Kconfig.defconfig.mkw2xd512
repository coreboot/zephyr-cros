if SOC_MKW22D5 || SOC_MKW24D5

config SOC
	default "mkw22d5"
	depends on SOC_MKW22D5

config SOC
	default "mkw24d5"
	depends on SOC_MKW24D5

config NUM_IRQS
	default 65

config SPI
	default y

config ENTROPY_MCUX_RNGA
	default y
	depends on ENTROPY_GENERATOR

config SOC_FLASH_MCUX
	default y
	depends on FLASH

config USB_KINETIS
	default y
	depends on USB_DEVICE_DRIVER

endif # SOC_MKW2xD512
